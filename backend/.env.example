# Configuración de la base de datos MongoDB
MONGODB_URI=mongodb://localhost:27017/reeutil
# O para MongoDB Atlas:
# MONGODB_URI=mongodb+srv://usuario:contraseña@cluster.mongodb.net/reeutil

# Configuración JWT
JWT_SECRET=tu_clave_secreta_muy_segura_aqui
JWT_EXPIRES_IN=90d

# Configuración de Email (Nodemailer)
# Para Gmail:
EMAIL_USER=tu_email@gmail.com
# Contraseña de aplicación de Gmail (NO tu contraseña normal)
# Genera una en: https://myaccount.google.com/apppasswords
EMAIL_PASSWORD=tu_contraseña_de_aplicacion_gmail

# Puerto del servidor
PORT=5500

# Seguridad HTTP/CORS
# Lista separada por comas de orígenes permitidos. Ejemplo:
# CORS_ORIGIN=http://localhost:5173,http://localhost:3000,https://tu-dominio.com
CORS_ORIGIN=http://localhost:5173

# Entorno (development | production)
NODE_ENV=development
